{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"rootDir": "./lib",
		"strict": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true
	},
	"include": ["lib/**/*"],
	"exclude": ["node_modules", "dist"]
}
