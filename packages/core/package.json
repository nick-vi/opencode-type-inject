{
	"name": "@nick-vi/type-inject-core",
	"version": "1.0.2",
	"description": "Core library for TypeScript type extraction and injection",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./extractor": {
			"types": "./dist/extractor.d.ts",
			"default": "./dist/extractor.js"
		},
		"./lookup": {
			"types": "./dist/lookup.d.ts",
			"default": "./dist/lookup.js"
		},
		"./prioritizer": {
			"types": "./dist/prioritizer.d.ts",
			"default": "./dist/prioritizer.js"
		},
		"./formatter": {
			"types": "./dist/formatter.d.ts",
			"default": "./dist/formatter.js"
		},
		"./types": {
			"types": "./dist/types.d.ts",
			"default": "./dist/types.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun build lib/index.ts lib/extractor.ts lib/lookup.ts lib/prioritizer.ts lib/formatter.ts lib/types.ts --outdir dist --target node --format esm --packages external && tsc -p tsconfig.build.json",
		"test": "bun test ./tests/*.test.ts",
		"typecheck": "tsc --noEmit",
		"prepare": "npm run build"
	},
	"peerDependencies": {
		"typescript": "^5",
		"svelte": "^5.0.0"
	},
	"peerDependenciesMeta": {
		"svelte": {
			"optional": true
		}
	},
	"dependencies": {
		"ts-morph": "^27.0.2"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"svelte": "^5.45.8"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nick-vi/type-inject"
	},
	"publishConfig": {
		"access": "public"
	}
}
