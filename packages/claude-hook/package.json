{
	"name": "@nick-vi/claude-type-inject-hook",
	"version": "1.1.0",
	"description": "Claude Code Read hook for TypeScript type injection",
	"type": "module",
	"bin": {
		"claude-type-inject-hook": "dist/index.js"
	},
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target node --format esm --packages external",
		"typecheck": "tsc --noEmit",
		"prepare": "npm run build"
	},
	"dependencies": {
		"@nick-vi/type-inject-core": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nick-vi/type-inject"
	},
	"publishConfig": {
		"access": "public"
	}
}
